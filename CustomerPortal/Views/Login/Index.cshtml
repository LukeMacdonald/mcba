@model Login
@{
    ViewData["Title"] = "Login";
}

<div>
    <table style="">
        <tr>
            <th style="padding-left: 20px">
                <div style="position: absolute; width: 70%; padding-top: 5%">
                    <img src="/img/login.png" style="height: 500px" alt="">
                </div>
            </th>
            <th style="padding-left: 300px; padding-top: 50px">
                <div style="position: absolute; width: 70%; padding-top: 10%">
                    <h1 class="display-4 text-white" style="text-align: center; font-size: 50px">Welcome back!</h1>
                    <h3 class="display-4 text-white" style="text-align: center; font-size: 20px">Please login to continue.</h3>
                    <div class="row text-white" style="margin: 0 auto;">
                        <div class="col-md-4" style="margin: 0 auto;">
                            <form asp-action="Index">
                                <div class="form-group" style="padding-top:20px">
                                    <label asp-for="LoginID" class="control-label"></label>
                                    <input asp-for="LoginID" class="form-control"/>
                                    <span asp-validation-for="LoginID" class="text-danger"></span>
                                </div>
                                <div class="form-group" style="padding-top:20px">
                                    <label for="Password" class="control-label">Password</label>
                                    <input id="Password" name="Password" type="password" class="form-control"
                                           data-val="true" data-val-required="The Password field is required."/>
                                    @Html.ValidationMessage("Password", new { @class = "text-danger" })
                                </div>
                                <div class="form-group " style="padding-top:30px; text-align: center">
                                    <input type="submit" value="Login" style="height: 50px;width: 150px" class= "log-in-button"/>
                                </div>
                                @Html.ValidationMessage("LoginFailed", new { @class = "text-danger" })
                            </form>
                        </div>
                    </div>
                </div>
            </th>
        </tr>
    </table>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}